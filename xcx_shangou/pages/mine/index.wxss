/* pages/mine/index.wxss */

.userinfo {
  width: 100%;
  height: 30%;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  display: flex;
  background-color: #FFFFFF;
  margin-bottom: 1px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 1px solid #BFBFBF;
}

.userinfo-nickname {
  color: #aaa;
}

.centerView {
  width: 100%;
  height: 15%;
  display: flex;
  flex-direction: row;
  background-color:  #FFFFFF;
  justify-content: space-around; 
}

.centerView-item {
  display: flex;
  height: 100%;
  width: 30%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.imageView {
  width: 45px;
  height: 45px;
  position: relative;
}
.icon {
  position: absolute;
  top: 3px;
  right: 3px;
  width: 16px;
  height: 16px;
}

.centerView-image {
  width: 25px;
  height: 25px;
}

.margin-top {
  margin-top: 10px;
}

.single{
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
}
.cou{
  padding: 1px 5px 1px 5px;
  border:1px solid #d9d9d9;
  border-radius: 50px;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size:12px
}

.list-icon{
  position: absolute;
  top: 15px;
  right: 30px;
  width: 16px;
  height: 16px;
}
