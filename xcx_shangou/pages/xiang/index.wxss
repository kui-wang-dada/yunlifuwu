@import "../../app.wxss";
page{
    background-color: #fff;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 10px;
}
.page__bd {
    padding-bottom: 10px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.weui-cells::after {
    border-bottom:0px;
}
.weui-cells::before {
    border-top:0px;
}
.weui-cell__bd{
    color:#888;
}
.pay{
    color:#F84E4C;
}
.black{
    color:#000;
}
.weui-cells{
    font-size:14px;
}
.weui-cell{
  padding:0 3%;
}
.top,.container{
  height:100%;
  width: 94%;
  margin: 3%;
  border: 1px solid #ddd;
  font-size: 14px;
  float: left;
  background-color:#fff;
}
.head{
  width: 100%;
  float: left;
  height: 30px;
  line-height: 30px;
}
.head>.left,.head>.right{
  float: left;
}
.head>.left{
  width: 80%;
  text-align: center;
}
.head>.right{
  width: 14%;
  margin: 5px auto;
  text-align: center;
  background-color: #adcddf;
  color: #fff;
  border-radius: 5px;
  font-size: 12px;
  height: 20px;
  line-height: 20px;
}
.data,.hao,.total{
  color: #666;
  float: left;
  height: 30px;
  line-height: 30px;
  width: 94%;
  padding: 0 3%;
}
.left,.middle,.right{
  float: left;
}
.middle,.right{
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.hao>.left{
  width: 90%;
}
.hao>.right{
  width: 40%;
}
.total>.left,.total>.middle{
  width: 33%;
}
.total>.right{
  width: 33%;
}
.tiao>.left{
  width: 80%;
}
.tiao>.middle{
  height:44px;
  line-height:44px;
  width: 5%;
  text-align: center;
}
.tiao>.right{
  height:44px;
  line-height:44px;
  width: 15%;
  text-align: right;
}
.tiao{
  color: #666;
  float: left;
  width: 94%;
  padding: 1% 3%;
}
.list{
  width: 100%;
  display: flex;
  
}
.list text{
  font-family: "黑体";
  font-size:14px;
  display: block;
  float:left;
}
.goods{
  width:100%;
  text-align:left;
}

.count{
  width:100%;
  color:#8a8a8a;
  text-align:right;
}
.totle{
  width:100%;
  color:#FF4500;
  text-align:right;
}
.line-center{
  display: flex;
  justify-content: center;
  align-items: center;
}

.bottomView {
  width: 100%;
  display: flex;
  flex-direction: row;
}