.page {  
  background-color: #F5F5F5; 
}  
  
.swiper-tab {  
  display: flex;  
  flex-direction: row;  
  line-height: 80rpx;  
  background-color: #FFFFFF;
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 9000;
  height:44px;
}  
  
.tab-item {  
  width: 33.3%;  
  text-align: center;  
  font-size: 15px;  
  color: #777;  
}  
  
.swiper {  
  margin-top: 44px;   
}  
  
.on {  
  color: #ffa825;
  border-bottom: 5rpx solid #ffa825;
}  

.itemView {
  /* background-color: #87CEFA; */
  height: 192px; 
  margin-top: 8px;
}

.margin-left {
  margin-left: 10px;
  font-size: 14px;
  color: #888;
}

.itemView-title {
  flex-direction: row;
  background-color: #fff;
  height: 40px;
  display: flex;
  align-items: center;
}

.title-image {
  height:18px;
  width:18px
}

.title-left {
  position: absolute;
  right: 10px;
  height: 40px;
  display: flex;
  align-items: center;
  line-height:40px;
}
.title-left text{
  color: #333;
  font-size: 14px;
}

.itemView-center {
  flex-direction: column;
  height: 100px;
  width: 100%;
  display: flex;
  justify-content: center;
  background-color: #F9FAFC;
}

.centerText-view {
  width: 100%;
  height: 33.3%;
  display: flex;
  align-items: center;
  margin-left: 10px;
  color: #000;
  font-family: "黑体";
}

.bottom-button {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80px;
  height: 30px;
}

::-webkit-scrollbar
{
    width: 0px;
    height: 0px;
}

.border-style {
  border: 1px solid  	#D3D3D3
}

.none {
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: #F5F5F5;
}
.product{
  font-size: 14px;
  color: #888;
  height: 25%;
  line-height: 25%;
  width:100%;
  display:flex;
  align-items:center;
  margin-left:10px;
}
.del{
  height: 50px;
}
.liji{
  margin-left:18rpx;
  background-color:#ffa825;
}
.liji text{
  color:#ffffff;
}
.del .title-left{
  height:50px;
  line-height:50px;
}